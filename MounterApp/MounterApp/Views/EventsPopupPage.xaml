<popup:PopupPage  xmlns:popup="http://rotorgames.com" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 CloseWhenBackgroundIsClicked="True"
                 BackgroundClicked="PopupPage_BackgroundClicked"
                  x:Class="MounterApp.Views.EventsPopupPage" >
    <popup:PopupPage.Content>
        <Frame Style="{StaticResource PopupFrameStyle}">
            <StackLayout Style="{StaticResource CommonStackLayoutStyle}">
                <FlexLayout>
                    <DatePicker Style="{StaticResource DatePickerStyle}" Margin="2" Date="{Binding StartDate}"/>
                    <DatePicker Style="{StaticResource DatePickerStyle}" Margin="2" Date="{Binding EndDate}"/>
                    <Button Style="{StaticResource CommonButtonStyle}" ImageSource="{Binding GetImage}" FontSize="Default" Text="Получить" Command="{Binding GetEventsCommands}"/>
                </FlexLayout>
                <StackLayout Style="{StaticResource ActivityIndicatorStackLayoutStyle}" IsVisible="{Binding IndicatorVisible}">
                    <ActivityIndicator Style="{StaticResource ActivityIndicatorStyle}"/>
                    <Label Style="{StaticResource ActivityIndicatorLabelStyle}"/>
                </StackLayout>
                <ScrollView>
                    <StackLayout Opacity="{Binding OpacityForm}">
                        <CollectionView Margin="5" ItemsSource="{Binding Events, Mode=TwoWay}" SelectionMode="Single">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Style="{StaticResource FrameInfoStyle}">
                                        <Frame.Content>
                                            <StackLayout>
                                                <Label Style="{StaticResource CommonLabelStyle}"  Text="{Binding Path=REDateTime}" FontAttributes="Bold"/>
                                                <Label Style="{StaticResource CommonLabelStyle}"  Text="{Binding Path=RChannelNameText}"/>
                                                <Label Style="{StaticResource CommonLabelStyle}"  Text="{Binding Path=EventCodeText}"/>
                                                <Label Style="{StaticResource CommonLabelStyle}"  Text="{Binding Path=EventClassNameText}"/>
                                                <Label Style="{StaticResource CommonLabelStyle}"  Text="{Binding Path=ZoneUserText}" />
                                                <Label Style="{StaticResource CommonLabelStyle}"  Text="{Binding Path=PartNumberText}"/>
                                                <Label Style="{StaticResource CommonLabelStyle}" Text="{Binding Path=EventDesc}"/>
                                            </StackLayout>
                                        </Frame.Content>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </StackLayout>
                </ScrollView>
                <Button Style="{StaticResource CommonButtonStyle}" ImageSource="{Binding CloseImage}" Text="Закрыть" Command="{Binding ExitCommand}"/>
            </StackLayout>
        </Frame>
    </popup:PopupPage.Content>
</popup:PopupPage>