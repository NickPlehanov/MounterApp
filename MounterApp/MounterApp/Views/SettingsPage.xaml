<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MounterApp.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding AutoEnter}" HorizontalOptions="CenterAndExpand"/>
                <Label Grid.Column="1" Grid.Row="0" Text="Автоматический вход" Style="{StaticResource MountersLabelStyle}"/>

                <Entry Grid.Column="0" Grid.Row="1" Keyboard="Numeric" Text="{Binding Quality}"/>
                <Label Grid.Column="1" Grid.Row="1" Text="Качество фото" Style="{StaticResource MountersLabelStyle}"/>

                <Entry Grid.Column="0" Grid.Row="2" Keyboard="Numeric" Text="{Binding Compression}"/>
                <Label Grid.Column="1" Grid.Row="2" Text="Степень сжатия фото" Style="{StaticResource MountersLabelStyle}"/>

                <Button Style="{StaticResource CommonButtonStyle}" ImageSource="{Binding ClearImage}" Grid.ColumnSpan="2" Grid.Row="3" Text="Очистить локальную базу монтажей" Command="{Binding ClearDatabaseCommand}"/>

                <Button Style="{StaticResource CommonButtonStyle}" ImageSource="{Binding SaveImage}"  Grid.ColumnSpan="2" Grid.Row="4" Text="Сохранить" Command="{Binding SaveCommand}"/>


                <Label Text="{Binding Version, Mode=TwoWay}" Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource MountersLabelStyle}"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>