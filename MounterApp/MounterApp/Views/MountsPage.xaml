<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MounterApp.Views.MountsPage">
    <StackLayout>
        <Grid Opacity="{Binding Opacity}">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Grid.ColumnSpan="3">
                <Label HorizontalOptions="Center" Text="Запланированные монтажи" FontAttributes="Bold" Visual="Material" Margin="5" FontSize="Large"/>
                <!--</Expander.Header>-->
                <CollectionView Grid.ColumnSpan="2" Grid.Row="1" Margin="5" 
                                ItemsSource="{Binding GoogleMounts}" SelectionMode="Single" 
                                    SelectedItem="{Binding GoogleMount}"
                                    SelectionChangedCommand="{Binding SelectMountCommand, Mode=TwoWay}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Path=FullInfo}" HeightRequest="50" BackgroundColor="Azure" Margin="0,5" 
                                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>

            <StackLayout Grid.Row="1" Grid.ColumnSpan="3">
                <Label HorizontalOptions="Center" Text="{Binding HeaderNotSended}" FontAttributes="Bold" Visual="Material" Margin="5" FontSize="Large"/>
                <!--</Expander.Header>-->
                <CollectionView Grid.ColumnSpan="2" Grid.Row="1" Margin="5" 
                                ItemsSource="{Binding NotSendedMounts}" SelectionMode="Single" 
                                    SelectedItem="{Binding NotSendedMount}"
                                    SelectionChangedCommand="{Binding SelectMountCommand, Mode=TwoWay}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Orientation="Vertical"/>
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Path=ObjectNumber}" HeightRequest="50" BackgroundColor="Azure" Margin="0,5" 
                                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </StackLayout>
            <Button VerticalOptions="EndAndExpand" Margin="5" Grid.Row="1" Grid.ColumnSpan="3" Text="Новый монтаж" FontSize="Large" Command="{Binding NewMountCommand}"/>
        </Grid>
        <StackLayout IsVisible="{Binding IndicatorVisible}" Grid.Row="2" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">
            <ActivityIndicator IsRunning="True" Color="Red" HeightRequest="50" WidthRequest="50"  />
            <Label FontAttributes="Bold" Text="Подождите, идет загрузка..." TextColor="White" />
        </StackLayout>
    </StackLayout>
</ContentPage>