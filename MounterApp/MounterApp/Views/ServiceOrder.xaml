<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:dg="clr-namespace:Xamarin.Forms.DataGrid;assembly=Xamarin.Forms.DataGrid" 
             xmlns:vm="clr-namespace:MounterApp.ViewModel"
             x:Class="MounterApp.Views.ServiceOrder">
    <ContentPage.Resources>
        <vm:ServiceOrderViewModel x:Key="vm"/>
    </ContentPage.Resources>
    <Grid Opacity="{Binding OpacityForm}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackLayout Grid.Row="0" Grid.ColumnSpan="2" Margin="5">
            <Expander IsExpanded="True">
                <Expander.Header>
                    <Label Text="Информация об охр. объекте" FontSize="Large" HorizontalTextAlignment="Center" FontAttributes="Bold" Margin="5"/>
                </Expander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Row="0" Grid.Column="0" Text="№ объекта" FontAttributes="Bold"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding ServiceOrderID.NewNumber}"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Название объект" FontAttributes="Bold"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding ServiceOrderID.NewObjName}"/>

                    <Label Grid.Row="2" Grid.Column="0" Text="Адрес объекта" FontAttributes="Bold"/>
                    <Label Grid.Row="2" Grid.Column="1" Text="{Binding ServiceOrderID.NewAddress}"/>

                    <Label Grid.Row="3" Grid.Column="0" Text="Контактные данные" FontAttributes="Bold"/>
                    <Label Grid.Row="3" Grid.Column="1" Text="{Binding Contact}" TextDecorations="Underline" TextColor="Blue">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding CallClientCommand}" CommandParameter="{Binding Contact}"/>
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Grid.Row="4" Grid.Column="0" Text="Подъездные пути" FontAttributes="Bold"/>
                    <Label Grid.Row="4" Grid.Column="1" Text="{Binding Siding}"/>

                    <Label Grid.Row="5" Grid.Column="0" Text="ТО ОС" FontAttributes="Bold" VerticalOptions="Center"/>
                    <CheckBox Grid.Row="5" Grid.Column="1" IsEnabled="False" IsChecked="{Binding rrOS}"/>

                    <Label Grid.Row="6" Grid.Column="0" Text="ТО ПС" FontAttributes="Bold" VerticalOptions="Center"/>
                    <CheckBox Grid.Row="6" Grid.Column="1" IsEnabled="False" IsChecked="{Binding rrPS}"/>

                    <Label Grid.Row="7" Grid.Column="0" Text="ТО Видео" FontAttributes="Bold" VerticalOptions="Center"/>
                    <CheckBox Grid.Row="7" Grid.Column="1" IsEnabled="False" IsChecked="{Binding rrVideo}"/>

                    <Label Grid.Row="8" Grid.Column="0" Text="ТО СКУД" FontAttributes="Bold" VerticalOptions="Center"/>
                    <CheckBox Grid.Row="8" Grid.Column="1" IsEnabled="False" IsChecked="{Binding rrAccess}"/>

                    <Label Grid.Row="9" Grid.Column="0" Text="Дата заявки" FontAttributes="Bold"/>
                    <Label Grid.Row="9" Grid.Column="1" Text="{Binding ServiceOrderID.NewDate, StringFormat='{0:dd.MM.yyyy}'}"/>

                    <Label Grid.Row="10" Grid.Column="0" Text="Время заявки" FontAttributes="Bold"/>
                    <Label Grid.Row="10" Grid.Column="1" Text="{Binding ServiceOrderID.NewTime, StringFormat='{}{0:hh\\:mm}'}"/>

                    <Label Grid.Row="11" Grid.Column="0" Text="Категория заявки" FontAttributes="Bold"/>
                    <Label Grid.Row="11" Grid.Column="1" Text="{Binding Category}"/>

                    <Label Grid.Row="12" Grid.Column="0" Text="Причина посещения" FontAttributes="Bold"/>
                    <Label Grid.Row="12" Grid.Column="1" Text="{Binding ServiceOrderID.NewName}"/>

                    <Label Grid.Row="13" Grid.Column="0" Text="Примечание" FontAttributes="Bold"/>
                    <Label Grid.Row="13" Grid.Column="1" Text="{Binding ServiceOrderID.NewCommentNew}"/>
                </Grid>
            </Expander>
        </StackLayout>
        <StackLayout Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
            <Expander>
                <Expander.Header>
                    <Label Text="Информация об объекте"  FontSize="Large" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
                </Expander.Header>
                <StackLayout>
                    <StackLayout>
                        <Button Text="Информация по объекту" Command="{Binding GetObjectInfoCommand}"/>
                        <Button Text="События по времени" Command="{Binding GetEventsCommand}"/>
                        <Button Text="Заявки по объекту" Command="{Binding ServiceOrderByObjectCommand}"/>
                        <Button Text="Схема объекта" Command="{Binding ObjectSchemeCommand}"/>
                    </StackLayout>
                    <StackLayout>
                        <dg:DataGrid ItemsSource="{Binding Path=Wires}">
                            <dg:DataGrid.Columns>
                                <dg:DataGridColumn Width="*" Title="Номер" PropertyName="ID"/>
                                <dg:DataGridColumn Width="*" Title="Описание" PropertyName="Desc"/>
                            </dg:DataGrid.Columns>
                        </dg:DataGrid>
                        <dg:DataGrid ItemsSource="{Binding Path=ExtFields}">
                            <dg:DataGrid.Columns>
                                <dg:DataGridColumn Width="*" Title="Номер" PropertyName="FieldName"/>
                                <dg:DataGridColumn Width="*" Title="Значение" PropertyName="FieldValue"/>
                            </dg:DataGrid.Columns>
                        </dg:DataGrid>
                        <!--<Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Text="Название: "/>
                                            <Label Grid.Column="1" Text="{Binding Path=}"/>
                                    </Grid>-->
                        <!--<StackLayout>
                                    <Label BackgroundColor="AntiqueWhite" Text="{Binding Path=FullName}" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" WidthRequest="100" HeightRequest="100"/>
                                </StackLayout>-->
                    </StackLayout>
                </StackLayout>
            </Expander>
        </StackLayout>
        <StackLayout Grid.Row="3" Grid.Column="0" Margin="5">
            <Button Text="Пришел" Command="{Binding IncomeCommand}"/>
        </StackLayout>
        <StackLayout Grid.Row="3" Grid.Column="1" Margin="5">
            <Button Text="Закрыть заявку" Command="{Binding CloseOrderCommand}"/>
        </StackLayout>
    </Grid>
</ContentPage>